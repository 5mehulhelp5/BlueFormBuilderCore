<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <!-- FORM -->
    <event name="blueformbuilder_core_api_data_forminterface_save_before">
        <observer name="blueformbuilder_form_save_before" instance="Magento\Framework\EntityManager\Observer\BeforeEntitySave" />
    </event>
    <event name="blueformbuilder_core_api_data_forminterface_save_after">
        <observer name="blueformbuilder_form_save_after" instance="Magento\Framework\EntityManager\Observer\AfterEntitySave" />
    </event>
    <event name="blueformbuilder_core_api_data_forminterface_delete_before">
        <observer name="blueformbuilder_form_delete_before" instance="Magento\Framework\EntityManager\Observer\BeforeEntityDelete" />
    </event>
    <event name="blueformbuilder_core_api_data_forminterface_delete_after">
        <observer name="blueformbuilder_form_delete_after" instance="Magento\Framework\EntityManager\Observer\AfterEntityDelete" />
    </event>
    <event name="blueformbuilder_core_api_data_forminterface_load_after">
        <observer name="blueformbuilder_form_load_after" instance="Magento\Framework\EntityManager\Observer\AfterEntityLoad" />
    </event>
    <!-- SUBMISSION -->
    <event name="blueformbuilder_core_api_data_submissioninterface_save_before">
        <observer name="blueformbuilder_submission_save_before" instance="Magento\Framework\EntityManager\Observer\BeforeEntitySave" />
    </event>
    <event name="blueformbuilder_core_api_data_submissioninterface_save_after">
        <observer name="blueformbuilder_submission_save_after" instance="Magento\Framework\EntityManager\Observer\AfterEntitySave" />
    </event>
    <event name="blueformbuilder_core_api_data_submissioninterface_delete_before">
        <observer name="blueformbuilder_submission_delete_before" instance="Magento\Framework\EntityManager\Observer\BeforeEntityDelete" />
    </event>
    <event name="blueformbuilder_core_api_data_submissioninterface_delete_after">
        <observer name="blueformbuilder_submission_delete_after" instance="Magento\Framework\EntityManager\Observer\AfterEntityDelete" />
    </event>
    <event name="blueformbuilder_core_api_data_submissioninterface_load_after">
        <observer name="blueformbuilder_submission_load_after" instance="Magento\Framework\EntityManager\Observer\AfterEntityLoad" />
    </event>
</config>